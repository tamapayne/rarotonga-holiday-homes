---
import BaseLayout from '../layouts/BaseLayout.astro';
import PropertyCard from '../components/PropertyCard.astro';
import { getCollection } from 'astro:content';

const properties = await getCollection('properties');
---

<BaseLayout title="Holiday Homes in Paradise">
  <!-- Hero Section with layered background -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden">
    <!-- Layered gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-night-900 via-night-800 to-lagoon-900"></div>

    <!-- Decorative elements for depth -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-20 left-10 w-72 h-72 bg-coral-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-lagoon-500 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-sand-500 rounded-full blur-3xl opacity-10"></div>
    </div>

    <!-- Subtle pattern overlay -->
    <div class="absolute inset-0 texture-overlay opacity-50"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32 w-full">
      <div class="max-w-3xl">
        <!-- Animated label -->
        <div class="animate-on-load animate-fade-up stagger-1 inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-8">
          <span class="w-2 h-2 bg-coral-400 rounded-full animate-pulse"></span>
          <span class="text-sand-200 text-sm font-medium tracking-wide">Cook Islands, South Pacific</span>
        </div>

        <h1 class="animate-on-load animate-fade-up stagger-2 font-display text-4xl md:text-5xl lg:text-7xl font-bold text-white mb-6 leading-tight">
          Find Your <span class="text-transparent bg-clip-text bg-gradient-to-r from-coral-300 to-coral-500">Perfect</span> Island Escape
        </h1>

        <p class="animate-on-load animate-fade-up stagger-3 text-lg md:text-xl text-sand-200 mb-10 max-w-2xl leading-relaxed">
          Handpicked holiday homes on Rarotonga. Crystal lagoons, tropical gardens, and the warmth of Polynesian hospitality await you.
        </p>

        <div class="animate-on-load animate-fade-up stagger-4 flex flex-col sm:flex-row gap-4">
          <a
            href="#properties"
            class="group inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-coral-500 to-coral-600 text-white font-semibold rounded-full hover:from-coral-600 hover:to-coral-700 transition-all shadow-2xl shadow-coral-500/30 hover:shadow-coral-500/50 hover:-translate-y-1"
          >
            Explore Properties
            <svg class="w-5 h-5 ml-2 group-hover:translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
          <a
            href="/enquire"
            class="inline-flex items-center justify-center px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/30 text-white font-semibold rounded-full hover:bg-white/20 transition-all"
          >
            Make an Enquiry
          </a>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="animate-on-load animate-fade-in stagger-6 absolute bottom-8 left-1/2 -translate-x-1/2 hidden md:flex flex-col items-center gap-2">
        <span class="text-sand-400 text-xs tracking-widest uppercase">Scroll</span>
        <div class="w-6 h-10 border-2 border-sand-400/50 rounded-full flex justify-center pt-2">
          <div class="w-1.5 h-3 bg-sand-400 rounded-full animate-bounce"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Rarotonga Section with warm styling -->
  <section class="relative py-20 md:py-28 overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 bg-gradient-to-b from-sand-100 to-sand-50"></div>
    <div class="absolute inset-0 texture-overlay"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="inline-block text-coral-600 font-semibold text-sm tracking-widest uppercase mb-4">Why Choose Us</span>
        <h2 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold text-night-900">
          The Rarotonga Experience
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Card 1 -->
        <div class="group bg-white rounded-3xl p-8 shadow-xl shadow-night-900/5 hover:shadow-2xl hover:shadow-coral-500/10 transition-all duration-500 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-lagoon-400 to-lagoon-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg shadow-lagoon-500/30 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-display font-semibold text-xl text-night-900 mb-3">Locally Operated</h3>
          <p class="text-night-500 leading-relaxed">
            A proudly Cook Island owned business operated from right here in Rarotonga. 
          </p>
        </div>

        <!-- Card 2 -->
        <div class="group bg-white rounded-3xl p-8 shadow-xl shadow-night-900/5 hover:shadow-2xl hover:shadow-coral-500/10 transition-all duration-500 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-coral-400 to-coral-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg shadow-coral-500/30 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="font-display font-semibold text-xl text-night-900 mb-3">Local Hospitality</h3>
          <p class="text-night-500 leading-relaxed">
            Cook Island hosts who share their homes and culture with the genuine warmth of the Pacific.
          </p>
        </div>

        <!-- Card 3 -->
        <div class="group bg-white rounded-3xl p-8 shadow-xl shadow-night-900/5 hover:shadow-2xl hover:shadow-coral-500/10 transition-all duration-500 hover:-translate-y-2">
          <div class="w-16 h-16 bg-gradient-to-br from-sand-400 to-sand-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg shadow-sand-500/30 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
            </svg>
          </div>
          <h3 class="font-display font-semibold text-xl text-night-900 mb-3">Quality Assured</h3>
          <p class="text-night-500 leading-relaxed">
            Carefully selected properties with modern amenities in the most beautiful locations.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Properties Section -->
  <section id="properties" class="py-20 md:py-28 bg-sand-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-12">
        <div>
          <span class="inline-block text-coral-600 font-semibold text-sm tracking-widest uppercase mb-4">Our Collection</span>
          <h2 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold text-night-900">
            Holiday Homes
          </h2>
        </div>
        <p class="text-night-500 max-w-md leading-relaxed">
          Each property offers a unique Rarotonga experience, from beachfront villas to tropical garden retreats.
        </p>
      </div>

      {properties.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {properties.map((property, index) => (
            <div class="animate-on-load animate-scale-in" style={`animation-delay: ${0.1 + index * 0.1}s`}>
              <PropertyCard
                name={property.data.name}
                slug={property.id.replace('.md', '')}
                location={property.data.location}
                featuredImage={property.data.featuredImage}
                capacity={property.data.capacity}
                bedrooms={property.data.bedrooms}
                bathrooms={property.data.bathrooms}
                price={property.data.price}
                amenities={property.data.amenities}
              />
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-16 bg-white rounded-3xl shadow-xl">
          <div class="w-20 h-20 bg-sand-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-sand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
          <p class="text-night-500 text-lg">No properties available at the moment. Check back soon!</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section with warm gradient -->
  <section class="relative py-24 overflow-hidden">
    <!-- Gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-coral-600 via-coral-500 to-sand-500"></div>

    <!-- Decorative blobs -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute -top-20 -left-20 w-80 h-80 bg-white rounded-full blur-3xl"></div>
      <div class="absolute -bottom-20 -right-20 w-96 h-96 bg-lagoon-400 rounded-full blur-3xl"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
        Ready for Paradise?
      </h2>
      <p class="text-white/90 text-lg mb-10 max-w-2xl mx-auto leading-relaxed">
        Send us an enquiry and we'll respond within 24 hours with availability and everything you need to book your dream escape.
      </p>
      <a
        href="/enquire"
        class="group inline-flex items-center px-10 py-5 bg-white text-coral-600 font-bold text-lg rounded-full hover:bg-sand-50 transition-all shadow-2xl hover:shadow-white/30 hover:-translate-y-1"
      >
        Make an Enquiry
        <svg class="w-5 h-5 ml-3 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
