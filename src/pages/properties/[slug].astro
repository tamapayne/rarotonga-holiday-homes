---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ImageGallery from '../../components/ImageGallery.astro';
import PropertyMap from '../../components/PropertyMap.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const properties = await getCollection('properties');
  return properties.map((property) => ({
    params: { slug: property.id.replace('.md', '') },
    props: { property },
  }));
}

const { property } = Astro.props;
const { Content } = await render(property);
const {
  name,
  location,
  type,
  capacity,
  bedrooms,
  bathrooms,
  price,
  priceNote,
  video,
  images,
  amenities,
  highlights,
  houseRules,
  safety,
  coordinates,
  nearbyAttractions,
} = property.data;
---

<BaseLayout title={name} description={`Book ${name} in ${location}. ${type} for up to ${capacity} guests.`}>
  <article class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Image Gallery -->
    <ImageGallery images={images} propertyName={name} video={video} />

    <div class="mt-10 grid grid-cols-1 lg:grid-cols-3 gap-10">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Header -->
        <header class="mb-10">
          <div class="flex items-center gap-3 mb-4">
            <span class="px-4 py-1.5 bg-gradient-to-r from-coral-500 to-coral-600 text-white rounded-full text-sm font-semibold shadow-lg shadow-coral-500/25">
              {type}
            </span>
            <div class="flex items-center gap-1.5 text-night-400 text-sm">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
              </svg>
              {location}
            </div>
          </div>

          <h1 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold text-night-900 mb-6">
            {name}
          </h1>

          <div class="flex flex-wrap items-center gap-6">
            <div class="flex items-center gap-2 text-night-600">
              <div class="w-10 h-10 rounded-full bg-lagoon-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-lagoon-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <span class="font-medium">{capacity} guests</span>
            </div>
            <div class="flex items-center gap-2 text-night-600">
              <div class="w-10 h-10 rounded-full bg-coral-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-coral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 21V11a2 2 0 012-2h10a2 2 0 012 2v10M3 21h18M3 17h18M7 9V7a2 2 0 012-2h6a2 2 0 012 2v2" />
                </svg>
              </div>
              <span class="font-medium">{bedrooms} bedrooms</span>
            </div>
            <div class="flex items-center gap-2 text-night-600">
              <div class="w-10 h-10 rounded-full bg-sand-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-sand-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 12h12a2 2 0 012 2v1a5 5 0 01-5 5h-4a5 5 0 01-5-5v-1a2 2 0 012-2zM7 12V6a2 2 0 012-2h1v4M9 20v2m6-2v2" />
                </svg>
              </div>
              <span class="font-medium">{bathrooms} bathrooms</span>
            </div>
          </div>
        </header>

        <!-- Highlights -->
        {highlights && highlights.length > 0 && (
          <section class="mb-10 rounded-2xl p-7 bg-[#F5F3E7] border border-sand-200/40 shadow-sm">
            <h2 class="font-display font-semibold text-lg text-night-800 mb-5 flex items-center gap-3">
              <span class="w-7 h-7 rounded-full flex items-center justify-center bg-gradient-to-br from-sand-500 to-sand-400 shadow-sm">
                <svg class="w-3.5 h-3.5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              </span>
              Property Highlights
            </h2>
            <ul class="grid grid-cols-1 md:grid-cols-2 gap-2.5">
              {highlights.map((highlight) => (
                <li class="flex items-start gap-2.5 text-night-700 text-[15px] leading-relaxed">
                  <span class="w-5 h-5 rounded-full flex-shrink-0 mt-0.5 flex items-center justify-center bg-sand-300/40">
                    <svg class="w-3 h-3 text-sand-700" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  </span>
                  {highlight}
                </li>
              ))}
            </ul>
          </section>
        )}

        <!-- Description -->
        <section class="mb-10">
          <div id="description-container" class="prose prose-lg prose-night max-w-none text-night-600 leading-relaxed description-content">
            <div id="description-full">
              <Content />
            </div>
          </div>
          <button
            id="read-more-btn"
            class="hidden mt-4 text-coral-600 hover:text-coral-700 font-semibold transition-colors"
          >
            Read more
          </button>
        </section>

        <!-- Amenities -->
        <section class="mb-10">
          <h2 class="font-display font-semibold text-2xl text-night-900 mb-6">Amenities</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            {amenities.map((amenity) => (
              <div class="flex items-center gap-3 p-3 bg-sand-50 rounded-xl text-night-700">
                <svg class="w-5 h-5 text-coral-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="font-medium">{amenity}</span>
              </div>
            ))}
          </div>
        </section>

        <!-- House Rules -->
        {houseRules && houseRules.length > 0 && (
          <section class="mb-10">
            <h2 class="font-display font-semibold text-2xl text-night-900 mb-6">House Rules</h2>
            <ul class="space-y-3">
              {houseRules.map((rule) => (
                <li class="flex items-start gap-3 text-night-600">
                  <div class="w-6 h-6 rounded-full bg-sand-100 flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-sand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  {rule}
                </li>
              ))}
            </ul>
          </section>
        )}

        <!-- Safety -->
        {safety && safety.length > 0 && (
          <section class="mb-10">
            <h2 class="font-display font-semibold text-2xl text-night-900 mb-6">Safety Features</h2>
            <div class="flex flex-wrap gap-3">
              {safety.map((item) => (
                <span class="flex items-center gap-2 px-4 py-2.5 bg-lagoon-50 rounded-full text-lagoon-700 text-sm font-medium border border-lagoon-200">
                  <svg class="w-4 h-4 text-lagoon-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {item}
                </span>
              ))}
            </div>
          </section>
        )}
      </div>

      <!-- Sidebar -->
      <aside class="lg:col-span-1">
        <div class="sticky top-24 bg-white border border-sand-200 rounded-3xl p-8 shadow-2xl shadow-night-900/10">
          <!-- Price -->
          <div class="mb-6 pb-6 border-b border-sand-200">
            <div class="flex items-baseline gap-2">
              <span class="text-4xl font-bold text-night-900">${price}</span>
              <span class="text-night-400 font-medium">/ night</span>
            </div>
            {priceNote && (
              <p class="text-sm text-night-500 mt-2">{priceNote}</p>
            )}
          </div>

          <!-- CTA Button -->
          <a
            href={`/enquire?property=${encodeURIComponent(name)}`}
            class="group block w-full text-center px-6 py-4 bg-gradient-to-r from-coral-500 to-coral-600 text-white font-bold rounded-xl hover:from-coral-600 hover:to-coral-700 transition-all shadow-xl shadow-coral-500/25 hover:shadow-coral-500/40 hover:-translate-y-0.5 mb-4"
          >
            <span class="flex items-center justify-center gap-2">
              Enquire Now
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </a>

          <p class="text-sm text-night-400 text-center mb-6">
            We typically respond within 24 hours
          </p>
        </div>
      </aside>
    </div>

    <!-- Location & Map -->
    {coordinates && (
      <PropertyMap
        coordinates={coordinates}
        propertyName={name}
        nearbyAttractions={nearbyAttractions}
      />
    )}

    <!-- Back Link -->
    <div class="mt-16 pt-8 border-t border-sand-200">
      <a
        href="/"
        class="group inline-flex items-center text-coral-600 hover:text-coral-700 font-semibold"
      >
        <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
        </svg>
        Back to all properties
      </a>
    </div>
  </article>
</BaseLayout>

<style>
  .description-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .description-content :global(p:last-child) {
    margin-bottom: 0;
  }
</style>

<script>
  const WORD_LIMIT = 75;
  const fullContainer = document.getElementById('description-full');
  const readMoreBtn = document.getElementById('read-more-btn');

  if (fullContainer && readMoreBtn) {
    const fullHTML = fullContainer.innerHTML;
    const textContent = fullContainer.textContent || '';
    const words = textContent.trim().split(/\s+/);

    if (words.length > WORD_LIMIT) {
      const truncatedWords = words.slice(0, WORD_LIMIT).join(' ');
      const truncatedHTML = `<p>${truncatedWords}...</p>`;

      let isExpanded = false;
      fullContainer.innerHTML = truncatedHTML;
      readMoreBtn.classList.remove('hidden');

      readMoreBtn.addEventListener('click', () => {
        isExpanded = !isExpanded;
        if (isExpanded) {
          fullContainer.innerHTML = fullHTML;
          readMoreBtn.textContent = 'Read less';
        } else {
          fullContainer.innerHTML = truncatedHTML;
          readMoreBtn.textContent = 'Read more';
        }
      });
    }
  }
</script>
